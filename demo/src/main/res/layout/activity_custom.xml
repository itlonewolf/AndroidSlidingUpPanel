<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sothree.slidinguppanel.demo.CustomActivity">


    <Button
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#44ffff00"
            android:text="frame layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="frameClick"
    />

    <com.sothree.slidinguppanel.demo.DragableView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <TextView
                android:id="@+id/dragable_v"
                android:layout_margin="10dp"
                android:background="#44ff0000"
                android:gravity="center"
                android:layout_gravity="top"
                android:text="I can be dragged !top"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        <ListView
                android:id="@+id/list"
                android:tag="dragable_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">
        </ListView>

        <!--<TextView-->
                <!--android:layout_margin="10dp"-->
                <!--android:layout_gravity="bottom|right"-->
                <!--android:gravity="center"-->
                <!--android:background="#44ff0000"-->
                <!--android:text="I cannot be dragged !bottom"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"/>-->
    </com.sothree.slidinguppanel.demo.DragableView>

</FrameLayout>
